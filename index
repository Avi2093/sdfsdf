// Read the HTML file content
string htmlContent = File.ReadAllText("Mailerdata/your-file.html");
string imagePath = "Mailerdata/download.png";

// Add the ToAddress and HtmlContent to the dictionary
Dictionary<string, string> emailParams = new Dictionary<string, string>();
emailParams.Add("ToAddress", employeeEmail);
emailParams.Add("HtmlContent", htmlContent.Replace("{{FirstName}}", firstName)
                                         .Replace("{{LastName}}", lastName)
                                         .Replace("{{ImagePath}}", imagePath));
