[HttpPost]
public async Task<IActionResult> Post([FromBody] AddFavoriteToolRequest toolRequest) =>
    Content(
        JsonConvert.SerializeObject(new
        {
            success = (await _epRepository.AddFavoriteTool(toolRequest)).Success,
            message = (await _epRepository.AddFavoriteTool(toolRequest)).Message,
            data = JValue.CreateNull()
        }, Formatting.Indented),
        "application/json"
    );
