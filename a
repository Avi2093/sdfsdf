using EmployeePortal.API.Interfaces;
using Microsoft.AspNetCore.Http;
using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Mvc.Versioning;
using System.ComponentModel.DataAnnotations;

namespace EmployeePortal.API.Controllers
{
    [Route("api/v{version:apiVersion}/[controller]")]
    [ApiController]
    [ApiVersion("1.0")] 
    public class RoleController : ControllerBase
    {
        private readonly IRepository _epRepository;

        public RoleController(IRepository ccmsRepository)
        {
            _epRepository = ccmsRepository;
        }

        [HttpGet("{ccmsid}")]
        public async Task<IActionResult> GetRoleById([FromRoute, Required] int ccmsid)
        {
            if (!ModelState.IsValid)
            {
                return BadRequest(ModelState);
            }

            var role = await _epRepository.GetRoleById(ccmsid);
            return Ok(role);
        }
    }
}
