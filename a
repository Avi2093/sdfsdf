string philippineTimeZoneId = "Asia/Manila";
TimeZoneInfo philippineTimeZone = TimeZoneInfo.CreateCustomTimeZone(
    philippineTimeZoneId,
    TimeSpan.FromHours(8),  // Adjust the offset according to the Philippine timezone
    "Philippine Standard Time",  // Display name for the timezone
    "Philippine Standard Time"   // Standard name for the timezone
);

user.TimeZoneId = philippineTimeZone.Id;
