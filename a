public async Task<IActionResult> Get(int id) =>
    Content(
        JsonConvert.SerializeObject(await _epRepository.GetFavoriteTool(id), Formatting.Indented),
        "application/json"
    );





public async Task<IActionResult> Delete(int id) =>
    Content(
        JsonConvert.SerializeObject(await _epRepository.DeleteFavoriteTool(id), Formatting.Indented),
        "application/json"
    );



[HttpPut("{id}")]
public async Task<IActionResult> Put(int id, [FromBody] UpdateFavoriteToolRequest toolRequest) =>
    Content(
        JsonConvert.SerializeObject(await _epRepository.UpdateFavoriteTool(id, toolRequest), Formatting.Indented),
        "application/json"
    );
