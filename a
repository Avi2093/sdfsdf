[HttpPut("{id}")]
public async Task<IActionResult> Put(int id, [FromBody] UpdateFavoriteToolRequest toolRequest)
{
    var result = await _epRepository.UpdateFavoriteTool(id, toolRequest);
    return Content(JsonConvert.SerializeObject(new
    {
        success = result.Success,
        message = result.Message,
        data = JValue.CreateNull()
    }, Formatting.Indented), "application/json");
}
