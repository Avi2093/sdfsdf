using EmployeePortal.API.Interfaces;
using Microsoft.AspNetCore.Http;
using Microsoft.AspNetCore.Mvc;
using System.ComponentModel.DataAnnotations;

namespace EmployeePortal.API.Controllers
{
    [Route("api/[controller]")]
    [ApiController]
    public class RoleController : ControllerBase
    {
        private readonly IRepository _epRepository;

        public RoleController(IRepository ccmsRepository)
        {
            _epRepository = ccmsRepository;
        }

        [HttpGet]
        public async Task<IActionResult> GetRoleById([FromQuery, Required] int ccmsid)
        {
            if (!ModelState.IsValid)
            {
                return BadRequest(ModelState);
            }

            var role = await _epRepository.GetRoleById(ccmsid);
            return Ok(role);
        }
    }
}
